{
    // ESLint formatting on save settings:
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "eslint.format.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "react"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    // i18next settings for showing the translation on hover:
    "reacti18nextTranslationOnHover.defaultLocale": "en-US",
    "reacti18nextTranslationOnHover.translationFoldersPaths": [
        "public/locales"
    ],
    // Max length ruler:
    "editor.rulers": [
        100,
        120
    ],
    "i18next.i18nPaths": "e:/Projects/JalapenoLabs/Elysia/frontend/public/locales",
}